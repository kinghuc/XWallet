<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:paddingEnd="@dimen/create_account_item_paddingSE"
        android:paddingStart="@dimen/create_account_item_paddingSE">
        <include layout="@layout/create_account_high_divider_view"/>
        <EditText android:id="@+id/mnemonic_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="115dip"
            android:layout_marginTop="10dip"
            android:hint="@string/input_mnemonic_hint"
            android:background="@drawable/import_mnemonic_et_bg"
            android:textSize="14sp"
            android:textColor="@color/gray_b2"
            android:gravity="start|top"
            android:padding="5dp"/>

        <include layout="@layout/import_account_common_view"/>
    </LinearLayout>
</ScrollView>
