<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/create_account_item_paddingSE"
        android:paddingStart="@dimen/create_account_item_paddingSE"
        android:paddingTop="10dip">

        <include layout="@layout/create_account_high_divider_view" />

        <EditText
            android:id="@+id/keystore_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/import_mnemonic_et_bg"
            android:gravity="start|top"
            android:hint="@string/input_keystore_hint"
            android:minHeight="115dip"
            android:textColor="@color/gray_b2"
            android:textSize="14sp"
            android:padding="5dp"/>

        <EditText android:id="@+id/keystore_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="50dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:background="@drawable/import_mnemonic_et_bg"
            android:hint="@string/input_keystore_password_hint"
            android:inputType="textPassword"
            android:paddingStart="5dp"/>

        <include layout="@layout/import_account_common_view" />
    </LinearLayout>
</ScrollView>
