<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.x.wallet.ui.activity.BackupMnemonicActivity">

    <com.x.wallet.ui.view.BackupMnemonicStepFirstView
        android:id="@+id/remind_backup_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"/>

    <com.x.wallet.ui.view.BackupMnemonicStepSecondView
        android:id="@+id/show_mnemonic_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:visibility="gone"/>

    <com.x.wallet.ui.view.BackupMnemonicStepThirdView
        android:id="@+id/backup_step_last_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"/>
</FrameLayout>
