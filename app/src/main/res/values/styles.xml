<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AllBalanceTextStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AllBalanceUnitTextStyle" parent="AllBalanceTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NotBackupWarnTextStyle">
        <item name="android:textColor">#5fc7c6</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AccountListItemBalanceTextStyle1">
        <item name="android:textColor">#131331</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AccountListItemCoinNameTextStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AccountListItemBalanceTextStyle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AddAccountBtnTextStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
